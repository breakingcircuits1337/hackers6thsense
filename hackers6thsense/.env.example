# Application Environment
APP_ENV=production
APP_DEBUG=false
APP_TIMEZONE=UTC
APP_LOG_LEVEL=info

# API Authentication & Security
API_KEY=your_secure_api_key_here_minimum_32_chars
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com
CACHE_ENCRYPTION_KEY=your_cache_encryption_key_32_chars_min

# ============================================
# DATABASE CONFIGURATION (NEW)
# ============================================
# Supported: sqlite, mysql, pgsql
DB_TYPE=sqlite
DB_PATH=storage/pfsense-ai.db

# For MySQL/PostgreSQL:
# DB_HOST=localhost
# DB_PORT=3306
# DB_NAME=pfsense_ai
# DB_USER=pfsense_user
# DB_PASSWORD=your_password

# pfSense Connection
PFSENSE_HOST=192.168.1.1
PFSENSE_USERNAME=admin
PFSENSE_PASSWORD=
PFSENSE_API_KEY=
PFSENSE_VERIFY_SSL=false

# AI Providers Configuration
PRIMARY_AI_PROVIDER=mistral
FALLBACK_AI_PROVIDERS=groq,gemini

# Mistral AI
MISTRAL_API_KEY=
MISTRAL_MODEL=mistral-large

# Groq
GROQ_API_KEY=
GROQ_MODEL=mixtral-8x7b-32768

# Google Gemini
GEMINI_API_KEY=
GEMINI_MODEL=gemini-pro

# Request Configuration
REQUEST_TIMEOUT=30
MAX_RETRIES=3
SESSION_TIMEOUT=3600

# ============================================
# AGENT SCHEDULER SETTINGS (NEW)
# ============================================
SCHEDULER_ENABLED=true
SCHEDULER_INTERVAL=5
SCHEDULER_MAX_CONCURRENT=5
SCHEDULER_RETENTION_DAYS=30
SCHEDULER_TIMEZONE=UTC

# ============================================
# AGENT CATEGORIES CONFIGURATION (NEW)
# ============================================
# Reconnaissance Agents
RECON_ENABLED=true
RECON_THREADS=4
RECON_TIMEOUT=300

# Exploitation Agents
EXPLOIT_ENABLED=true
EXPLOIT_SAFE_MODE=true
EXPLOIT_TIMEOUT=600

# Persistence Agents
PERSIST_ENABLED=true
PERSIST_TIMEOUT=300

# Privilege Escalation Agents
PRIV_ESCALATION_ENABLED=true
PRIV_ESCALATION_TIMEOUT=300

# Defense Evasion Agents
EVASION_ENABLED=true
EVASION_TIMEOUT=300

# Command Execution Agents
COMMAND_ENABLED=true
COMMAND_TIMEOUT=120

# Data Exfiltration Agents
EXFIL_ENABLED=true
EXFIL_TIMEOUT=300

# Lateral Movement Agents
LATERAL_ENABLED=true
LATERAL_TIMEOUT=300

# ============================================
# FILTER CONFIGURATION (NEW)
# ============================================
FILTER_AUTO_APPLY=true
FILTER_CACHE_TTL=3600
FILTER_DEFAULT_LIMIT=100
FILTER_MAX_LIMIT=1000

# ============================================
# SECURITY SETTINGS (NEW/ENHANCED)
# ============================================
ENCRYPTION_KEY=your-encryption-key-here
ENCRYPTION_ALGORITHM=AES-256-GCM
SECURE_CACHE_TTL=3600

# Password hashing
PASSWORD_HASH_ALGORITHM=bcrypt
PASSWORD_HASH_COST=12

# Session configuration
SESSION_SECURE=true
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=Strict

# ============================================
# LOGGING (NEW)
# ============================================
LOG_CHANNEL=stack
LOG_PATH=logs/
LOG_MAX_FILES=14
LOG_MAX_SIZE=10485760
LOG_RETENTION_DAYS=14

# Enable detailed logging for specific components
LOG_DATABASE=false
LOG_API_REQUESTS=true
LOG_AUTHENTICATION=true
LOG_ERRORS=true

# ============================================
# NOTIFICATIONS (NEW)
# ============================================
NOTIFICATION_ENABLED=true
NOTIFICATION_EMAIL_TO=admin@example.com
NOTIFICATION_EMAIL_FROM=noreply@example.com

# Slack notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/xxx/yyy/zzz
SLACK_CHANNEL=#security-alerts

# ============================================
# INTEGRATION WITH OBLIVION FRAMEWORK (NEW)
# ============================================
OBLIVION_ENABLED=false
OBLIVION_HOST=localhost
OBLIVION_PORT=5000
OBLIVION_API_KEY=oblivion-api-key
OBLIVION_SCENARIO=network_reconnaissance

# ============================================
# LEGION FRAMEWORK INTEGRATION (NEW)
# ============================================
LEGION_ENABLED=true
LEGION_ENDPOINT=http://localhost:3000
LEGION_API_KEY=your-legion-api-key
LEGION_PROVIDERS=groq,gemini,mistral
LEGION_DEFAULT_THREAT_LEVEL=2
LEGION_AUTO_CORRELATE=true
LEGION_CORRELATION_THRESHOLD=0.7
LEGION_ALERT_ON_THREAT=true
LEGION_THREAT_THRESHOLD=3
LEGION_INTEGRATION_MODE=passive
LEGION_CACHE_TTL=3600

# ============================================
# ADVANCED SETTINGS (NEW)
# ============================================
# Maximum execution time for agents (seconds)
MAX_EXECUTION_TIME=3600

# Maximum result size (bytes)
MAX_RESULT_SIZE=10485760

# Enable experimental features
EXPERIMENTAL_FEATURES=false

# Rate limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# Cache configuration
CACHE_DRIVER=file
CACHE_PREFIX=pfsense_ai
CACHE_TTL=3600

# ============================================
# DEVELOPMENT SETTINGS (NEW)
# ============================================
DEV_MODE=false
DEV_ALLOW_DEMO_AGENTS=false
DEV_MOCK_RESPONSES=false

# Security Settings (EXISTING)
# Generate a strong API key using: php -r "echo bin2hex(random_bytes(32));"
# For cache encryption, use: php -r "echo base64_encode(openssl_random_pseudo_bytes(32));"
